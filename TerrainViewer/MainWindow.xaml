<Window x:Class="TerrainViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="http://helix-toolkit.org/wpf"
        Title="Terrain Viewer" Width="1200" Height="800">

    <Grid>
        <h:HelixViewport3D x:Name="View"
                           ShowFrameRate="True"
                           ZoomExtentsWhenLoaded="True">

            <!-- Камера -->
            <h:HelixViewport3D.Camera>
                <PerspectiveCamera Position="0,2000,2000"
                                   LookDirection="0,-1000,-1000"
                                   UpDirection="0,1,0"
                                   FieldOfView="45"/>
            </h:HelixViewport3D.Camera>

            <!-- Свет -->
            <h:SunLight/>

        </h:HelixViewport3D>
    </Grid>
</Window>
